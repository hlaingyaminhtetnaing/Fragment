<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txtNameColor">
        <item name="android:textColor">#473D3D</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="txtMadeMargin">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="txtPriceColor">
        <item name="android:textColor">#FA754C</item>
    </style>

    <style name="txtCountryColor">
        <item name="android:textColor">#F4EFEF</item>
    </style>

    <style name="txtNewStyle">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="WhiteColor">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blackColor">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="txtThreeColor">
        <item name="android:textColor">#454545</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="txtBtnColor">
        <item name="android:textColor">#454545</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>